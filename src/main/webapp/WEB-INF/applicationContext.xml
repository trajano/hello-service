<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ws="http://jax-ws.dev.java.net/spring/core"
	xmlns:wss="http://jax-ws.dev.java.net/spring/servlet" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
    http://jax-ws.dev.java.net/spring/core https://jax-ws.dev.java.net/spring/core.xsd
    http://jax-ws.dev.java.net/spring/servlet https://jax-ws.dev.java.net/spring/servlet.xsd">

	<context:annotation-config />

	<!-- Define end points first separate from the actual beans otherwise this 
		section will get too convoluted for complex Spring configurations. -->
	<wss:binding url="/Hello">
		<wss:service>
			<ws:service bean="#webService" />
		</wss:service>
	</wss:binding>

	<!-- Bean configurations go here. -->
	<bean id="webService" class="net.trajano.ws.helloservice.impl.HelloImpl">
		<property name="helloString" value="Metro" />
	</bean>
</beans>
