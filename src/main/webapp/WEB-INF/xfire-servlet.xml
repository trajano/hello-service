<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<bean name="/hello" class="org.codehaus.xfire.spring.remoting.XFireExporter">
		<property name="serviceInterface" value="net.trajano.ws.helloservice.Hello" />
		<property name="namespace" value="http://ws.trajano.net/HelloService" />
		<property name="serviceBean">
			<bean class="org.example.helloservice.impl.HelloImpl">
				<property name="helloString" value="HelloFromXFireSpring " />
			</bean>
		</property>
		<!-- the XFire bean is defined in the xfire.xml file -->
		<property name="xfire" ref="xfire" />

	</bean>

</beans>